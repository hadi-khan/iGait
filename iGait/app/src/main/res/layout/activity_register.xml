
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel1">

        <TextView
            android:id="@+id/signUptextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_info"
            android:textSize="40sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/EasyGrey" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/signUptextView"
            android:hint="@string/name"
            android:id="@+id/nameEditText"
            android:layout_margin="16dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"

            android:hint="@string/email"
            android:id="@+id/emailEditText"
            android:layout_below="@+id/nameEditText"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_below="@+id/emailEditText"
            android:hint="@string/mobile"
            android:id="@+id/mobileEditText"
            android:layout_margin="16dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/mobileEditText"
            android:hint="@string/office_address"
            android:id="@+id/addressEditText"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/addressEditText"
            android:hint="@string/password"
            android:id="@+id/passwordRegisterEditText"
            android:layout_margin="16dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@+id/passwordRegisterEditText"
            android:hint="@string/re_password"
            android:id="@+id/reenterPasswordRegisterEditText"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"  />

        <Button
            android:id="@+id/btnRegisterSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit"
            android:layout_below="@+id/reenterPasswordRegisterEditText"
            android:textColor="#fff"
            android:textSize="13dp"
            android:layout_centerHorizontal="true"
            android:background="@color/GameGreen"
            android:layout_margin="16dp" />
    </RelativeLayout>
</ScrollView>
