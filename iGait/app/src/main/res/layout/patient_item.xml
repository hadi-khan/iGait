<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewPatientImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/patient_image"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_person_black_48dp" />

    <LinearLayout
        android:id="@+id/LinearLayoutGaitHealth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewPatientImage"
        android:layout_alignTop="@+id/imageViewPatientImage"
        android:layout_toRightOf="@+id/imageViewPatientImage"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewConfidence"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:contentDescription="@string/confidence_image"
            android:src="@drawable/conf_0"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewHealth1"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:contentDescription="@string/confidence_image"
            android:src="@drawable/health_grey"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewHealth2"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:contentDescription="@string/confidence_image"
            android:src="@drawable/health_grey"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewHealth3"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:contentDescription="@string/confidence_image"
            android:src="@drawable/health_grey"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginRight="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewHealth4"
            android:maxHeight="30dp"
            android:maxWidth="30dp"
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:contentDescription="@string/confidence_image"
            android:src="@drawable/health_grey"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageViewPatientImage"
        android:layout_below="@+id/imageViewPatientImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewInfoLeft"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/info_left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/TextBlack" />

        <TextView
            android:id="@+id/textViewSeparator"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/separator"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewInfoRight"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/info_right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/TextBlack" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewPriorityNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LinearLayoutInfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/LinearLayoutInfo"
        android:adjustViewBounds="true"
        android:contentDescription="@string/priority"
        android:maxHeight="18dp"
        android:maxWidth="18dp"
        android:minHeight="18dp"
        android:minWidth="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_report_problem_black_18dp" />

</RelativeLayout>
