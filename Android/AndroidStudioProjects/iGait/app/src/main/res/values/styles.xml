<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Calendar -->
    <style name="CalendariGait">
        <item name="styleCaldroidViewLayout">@style/CalendariGaitCalendarViewLayout</item>
        <item name="styleCaldroidLeftArrow">@style/CalendariGaitLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CalendariGaitRightButton</item>
        <item name="styleCaldroidMonthName">@style/CalendariGaitMonthName</item>
        <item name="styleCaldroidGridView">@style/CalendariGaitGridView</item>
        <item name="styleCaldroidNormalCell">@style/CalendariGaitNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CalendariGaitSquareCell</item>
        <item name="styleCaldroidWeekdayView">@style/CalendariGaitWeekday</item>
    </style>

    <style name="CalendariGaitCalendarViewLayout">
        <item name="android:background">@color/caldroid_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CalendariGaitArrowButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="CalendariGaitLeftButton" parent="CalendariGaitArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/book_blue_left_arrow</item>
    </style>

    <style name="CalendariGaitRightButton" parent="CalendariGaitArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/book_blue_right_arrow</item>
    </style>

    <style name="CalendariGaitMonthName">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="CalendariGaitGridView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:listSelector">@null</item>
        <item name="android:background">@color/caldroid_lighter_gray</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="CalendariGaitCell">
        <item name="android:textColor">@color/cell_text_color</item>
        <item name="android:background">@drawable/book_blue_cell_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendariGaitNormalCell" parent="CalendariGaitCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CalendariGaitSquareCell" parent="CalendariGaitCell" />

    <style name="CalendariGaitWeekday">
        <item name="android:textColor">@color/caldroid_middle_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

</resources>
