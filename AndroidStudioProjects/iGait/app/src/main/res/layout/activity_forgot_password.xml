<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel">

        <TextView
            android:id="@+id/rtrievePasswordTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/retrieve_password"
            android:textSize="40sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/EasyGrey" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/rtrievePasswordTextView"

            android:hint="@string/email"
            android:id="@+id/emailGetPassowrdEditText"
            android:layout_margin="16dp" />

        <Button
            android:id="@+id/btnForgtPasswordSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/submit"
            android:textColor="#fff"
            android:layout_below="@+id/emailGetPassowrdEditText"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:background="@color/GameGreen"/>
    </RelativeLayout>
</ScrollView>